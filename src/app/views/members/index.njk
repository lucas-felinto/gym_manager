{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        
        <table width="100%">

        <div class="header">
            
            <a href="/members/register"> <span class="material-icons icon"> add_circle </span> </a>
           
            <form action="/members" method="GET">
                <input type="text" name="filter" placeholder="Name or email" value="{{filter}}">
                <button type="submit">FILTER</button>
            </form>

        </div>
        
            <thead>
                <tr> 
                    <th>MEMBER</th>
                    <th>EMAIL</th>
                    <th>WEIGHT</th>
                    <th>HEIGHT</th>
                    <th>INFO</th>
                </tr>
            </thead>
            <tbody>

                {% for member in members %}
                <tr>
                    <td> 
                        <span style="background-image: url({{ member.avatar }})"> 
                        </span>
                        {{ member.name }} 
                    </td>
                    <td> {{ member.email }} </td>
                    <td> {{ member.weight }}kg </td>
                    <td> {{ member.height }}cm </td>
                    <td> <a href="/members/{{member.id}}"><span class="material-icons">info</span></a></td>
                </tr>
                {% endfor %}

            </tbody>

        </table>
        
        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}} 
            data-filter={{filter}} 
        ></div>

    </div>

{% endblock content %}