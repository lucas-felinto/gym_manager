{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <table width="100%">
        
            <thead>
                <tr> 
                    <th>INSTRUCTOR</th>
                    <th>MODALITY</th>
                    <th>PERIOD</th>
                    <th>INFO</th>
                </tr>
            </thead>
            <tbody>

            {% for instructor in instructors %}
                <tr>
                    <td> 
                        <span style="background-image: url({{ instructor.avatar }})"> 
                        </span>
                        {{ instructor.name }} 
                    </td>
                    <td> <p>{{ instructor.modalities }}</p> </td>
                    <td> {{ instructor.period }} </td>
                    <td> <a href="/instructors/{{instructor.id}}"><span class="material-icons">info</span></a></td>
                </tr>
            {% endfor %}

            </tbody>
            
        </table>

        <div class="icon">
            <a href="/instructors/register"> <span class="material-icons"> add_circle </span> </a>
        </div>

    </div>

{% endblock content %}