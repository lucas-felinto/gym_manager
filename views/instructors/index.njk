{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <table width="100%">
        
            <thead>
                <tr> 
                    <th>INSTRUCTOR</th>
                    <th>MODALITY</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

            {% for instructor in instructors %}
                <tr>
                     <span style="background-image: url({{ instructor.avatar }})"> </span>
                    <td> {{ instructor.name }} </td>
                    <td> {{ instructor.modalities }} </td>
                    <td> <a href="/instructors/{{instructor.id}}">See</a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}