{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        
        <section class="image" style="background: url('{{instructor.avatar}}') no-repeat center / cover">
        </section>
        
        <section class="details">   
        
            <form action="/instructors/?_method=PUT" method="POST">
                <h3>INSTRUCTOR EDIT</h3>
    
                {% include 'instructors/fields.njk' %}
    
                <input type="hidden" name="id" value="{{ instructor.id }}">
            
            </form>
    
            <form id="form-delete" action="/instructors?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{ instructor.id }}">
                <button type="submit">DELETE</button>
            </form>

            <script>

                    const formDelete = document.querySelector("#form-delete")
                    formDelete.addEventListener("submit", function(event){
                        const confirmation = confirm("Delete?")
                            if (!confirmation) {
                                event.preventDefault()
                            }
                    })

                </script>

        </section>
    
    </div>

{% endblock content %}